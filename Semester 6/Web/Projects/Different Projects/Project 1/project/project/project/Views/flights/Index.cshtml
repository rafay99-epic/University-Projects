        </td>
        <td>
            @Html.DisplayFor(modelItem => item.duration)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.total_seats)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.flight_id }) |
            @Html.ActionLink("Details", "Details", new { id=item.flight_id }) |
