    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.flight_departure_date)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.price)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.available_seats)
        </td>
